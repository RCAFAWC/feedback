<hr class="my-4">

<div class="row">
  <div class="col-3">
    <h6 class="mb-0"><%= comment.user %></h6>
    <p class="text-muted mt-0"><%= comment.user.team %></p>
  </div>
  <div class="col-9">
    <p class="text-muted mb-0"><%= distance_of_time_in_words_to_now(comment.created_at) %> ago</p>
    <p><%= comment.text %></p>
    <% comment.attachments.each do |attachment| %>
      <li><%= link_to attachment.filename, main_app.rails_blob_path(attachment, disposition: "attachment") %></li>
    <% end %>
  </div>
</div>