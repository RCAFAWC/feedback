<hr class="my-4">

<h5>New Comment</h5>

<div class="row">
  <div class="col-3">
    <h6 class="mb-0"><%= current_user %></h6>
    <p class="text-muted mt-0"><%= current_user.team %></p>
  </div>
  <div class="col-9">
    <%= bootstrap_form_with(model: [@ticket, @ticket.comments.build], remote: true) do |form| %>
      <p>
        <%= form.text_area :text %>
      </p>
      <%= form.submit class: "btn btn-primary"%>
    <% end %>
  </div>
</div>